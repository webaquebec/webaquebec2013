    <section id="horaire" data-section>
        <h1 class="h2">Horaire</h1>
        <ul id="schedule-nav">
                <li><a href="#/horaire/mercredi/" data-ref="mercredi"{% if today | dateTime("%A") != "jeudi" or today | dateTime("%A") != "vendredi" %} class="active"{% endif %}>mercredi 20 février</a></li>
            {% for date, dateData in sessions if dateData.day | dateTime("%A") != "mercredi" %}
                <li><a href="#/horaire/{{ dateData.day | dateTime("%A") }}/" data-ref="{{ dateData.day | dateTime("%A") }}"{% if today | dateTime("%A") == dateData.day | dateTime("%A") %} class="active"{% endif %}>{{ dateData.day | dateTime("%A %d %B") }}</a></li>
            {% endfor %}
        </ul>
        <div id="schedule">
            <ul id="rooms-name">
                {% for room in rooms if room.id != 6%}
                    <li id="room-{{ room.id }}">Salle {{ room.name }}</li>
                {% endfor %}
            </ul>
            <span class="shadow-top"></span>
            <div class="wrapper">
                <div id="schedule-wrap">
                    <div id="time-zone">
                        <span id="mercredi-lines" class="active">
                            <span class="time t7h15"><span>8h30</span></span>
                            <span class="time t8h15"><span>11h45</span></span>
                            <span class="time t8h30"><span>13h15</span></span>
                            <span class="time t9h30"><span>16h30</span></span>
                            <span class="time t10h15"><span>19h00</span></span>
                            <span class="time t11h45"><span>20h30</span></span>
                        </span>
                        
                        {% for date, dateData in sessions if dateData.day | dateTime("%A") != "mercredi" %}
                            <span id="{{ dateData.day | dateTime("%A") }}-lines"{% if dateData.day | dateTime("%A") == "mercredi" %} class="active"{% endif %}>
                                {% for line in lines[date] %}
                                    <span class="time t{{ line }}"><span>{{ line }}</span></span>
                                {% endfor %}
                            </span>
                        {% endfor %}
                    </div>
                    <div class="slides-wrap">
                        <div id="mercredi" class="slide{% if today | dateTime("%A") != "jeudi" or today | dateTime("%A") != "vendredi" %} active{% endif %}">
                            <span class="lines">
                                <span class="t7h15"></span>
                                <span class="t8h15"></span>
                                <span class="t8h30"></span>
                                <span class="t9h30"></span>
                                <span class="t10h15"></span>
                                <span class="t11h45"></span>
                            </span>
                            <span id="separators"><span></span><span></span><span></span><span></span></span>
                            <div class="conferences t7h15 t90m">
                                <div class="col">
                                    
                                    {% include 'includes/master-class.html.twig' with {
                                        id        : 73,
                                        slug      : "html5-windows-8-amis-avec-benefices",
                                        duration  : 135,
                                        line      : "7h15",
                                        performer : "Frédéric Harper",
                                        img       : "frederic_harper",
                                        name      : "HTML5 & Windows 8: amis avec bénéfices",
                                        time      : "<span>8h30 à 11h45</span><span>13h15 à 16h30</span>",
                                        room      : 1,
                                        limit     : 50,
                                        price     : 160,
                                        start     : 1361344500
                                    } %}
                                    
                                </div>
                                <div class="col">
                                    
                                    {% include 'includes/master-class.html.twig' with {
                                        id        : 75,
                                        duration  : 135,
                                        line      : "7h15",
                                        performer : "Jean-Daniel Cryans",
                                        img       : "jean-daniel_cryans",
                                        name      : "Introduction au Big Data avec Hadoop et HBase",
                                        slug      : "introduction-au-big-data-avec-hadoop-et-hbase",
