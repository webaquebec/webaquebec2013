<div id="conf-{{ id }}" class="conference t{{ line }} t{{ duration }}m" itemprop="subEvent" itemscope itemtype="http://schema.org/Event">
    <a href="/horaire/{{ start | dateTime("%A") }}/{{ slug }}-{{ id }}" class="white room-{{ room }}" data-id="{{ id }}">
        <figure itemprop="performer" itemscope itemtype="http://schema.org/Person">
            {% if img is defined %}
                {% set thumb = img %}
                {% else %}
                {% set thumb = "placeholder" %}
            {% endif %}
            {% if duration == '90' %}
                <img class="speaker-thumb" src="/assets/images/speakers/123x115/{{ thumb }}-medium.jpg" width="123" height="115" alt="{{ performer }}" itemprop="image" />
            {% else %}
                <img class="speaker-thumb" src="/assets/images/speakers/47x44/{{ thumb }}-small.jpg" width="47" height="44" alt="{{ performer }}" itemprop="image" />
            {% endif %}
            {#
            <img src="{{ img }}" width="47" height="52" alt=" " itemprop="image" />
            #}
            <figcaption><h2 itemprop="name">{{ performer }}</h2></figcaption>
        </figure>
        <span itemprop="description">{{ name | limitTitle | raw }}</span>
    </a>
</div>