<figure>
    <img src="http://cageme.herokuapp.com/g/400/375" width="400" height="375" alt="{{ speaker_name }}" />
    <figcaption><h1>{{ speaker_name }}</h1></figcaption>
</figure>
<div class="content">
    <h2>{{ name }}</h2>
    <span class="time"><time itemprop="startDate" datetime="{{ start | dateTime("%Y-%m-%dT%H:%M:00") }}">{{ start | dateTime("%A le %e %B, de %l h %M") }}</time> à <time itemprop="endDate" datetime="{{ end|dateTime("%Y-%m-%dT%H:%M:00") }}">{{ end|dateTime("%l h %M") }}</time></span>
    <span class="room">{{ room_name }}</span>
    <div id="scrollbar1" class="desc-wrap">
        <div class="scrollbar"><div class="track"><div class="thumb"><div class="end"></div></div></div></div>
        <div class="viewport">
            <div class="overview">
              {% if description is defined %}
              {{ description|raw }}
              {% else %}
              <p>Détails à venir</p>
              {% endif %}
            </div>
        </div>
    </div>
    <div class="addthis_toolbox addthis_default_style ">
        <a class="addthis_button_facebook_like" fb:like:layout="button_count" addthis:url="http://webaquebec.org/horaire/{{ start | dateTime("%A") }}/{{ slug }}-{{ id }}"></a>
        <a style="width: 92px;" class="addthis_button_tweet" addthis:url="http://webaquebec.org/horaire/{{ start | dateTime("%A") }}/{{ slug }}-{{ id }}"></a>
    </div>
</div>
