                                {% include 'includes/conference-full.html.twig' with {
                                    id          : 76,
                                    slug        : "content-and-chrome",
                                    performer   : "Mike Kruzeniski",
                                    img         : "mike_kruzeniski",
                                    name        : "Content & Chrome",
                                    room        : 6,
                                    start       : 1361386800,
                                    end         : 1361392200,
                                    sponsors    : null,
                                    sponsorId   : null
                                } %}
                                
