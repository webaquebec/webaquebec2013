<head>
    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{% block title %}{% endblock %}Web à Québec</title>
    <meta name="description" content="">

    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="/assets/stylesheets/global.css">
    {% block stylesheets %}{% endblock %}
      <!--[if lt IE 9]>
      <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
</head>
<body class="layout{% block body_classes %}{% endblock %}" itemscope itemtype="schema.org/Event">
    <nav role="navigation" id="main-nav">
        <div class="width">
            <span class="left">
                <a class="small-logo" href="#/home/"><span class="shy">WAQ</span></a>
                <a class="inscription" href="{# FIXME #}#">Inscrivez-vous</a>
            </span>
            <a href="{# FIXME #}#" class="iron-web"><span class="shy">Iron web</span> Deloitte</a>
            <ul id="nav-wrap">
              <li><a href="#/horaire/">Horaire</a></li>
              <li><a href="#/lieu-et-infos/">Lieu et infos</a></li>
              <li><a href="#">Partenaires</a></li>
              <li><a href="#">À propos</a></li>
            </ul>
        </div>
    </nav>

    <div id="one-pager">
        <div id="home" data-section>
            <header id="header">
                <a id="siteLogo" href="/"><span class="shy">Le Web à Québec</span></a>
                <div id="event-desc">
                    <h1 itemprop="name">Le web à Québec</h1>
                    Du <time itemprop="startDate" datetime="2013-02-20T07:30-17:30">20</time> au <time itemprop="startDate" datetime="2013-02-22T07:30-17:30">22</time> février 2013,
                    <span itemprop="location" itemscope itemtype="http://schema.org/Place">
                        <span itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                            <span itemprop="name">Espace 400<sup>e</sup> Bell</span>,
                            <span itemprop="addressRegion">Québec</span>
                        </span>
                    </span>
                </div>
                <ul id="social">
                    <li><a href="{# FIXME #}#">Nous joindre</a></li>
                    <li class="twitter"><a href="{# FIXME #}#"><span class="shy">Twitter</span></a></li>
                    <li class="facebook"><a href="{# FIXME #}#"><span class="shy">Facebook</span></a></li>
                </ul>
            </header>
            <div id="slider">
                <span class="texture-mask"></span>
                <span class="mask"></span>
                <div class="slider-info">
                    <span itemprop="description">
                        Trois jours de rencontres<br>
                        par et pour les gens<br>
                        qui imaginent le web
                    </span>
                    <div class="desc-nav-wrap">
                        <span class="slider-nav"></span>
                        <span class="descs"></span>
                    </div>
                </div>
                <div class="slides-wrap">
                    <div id="slide01" class="slide" data-desc="ux \ design web \ mobile \ médias sociaux \ données ouvertes \ seo \ css3 \ html5"><img src="/assets/images/slider/slide-01.jpg" width="1140" height="420"  alt=" " /></div>
                    <div id="slide02" class="slide" data-desc="This is another awesome desc ... lorem ipsum dolor sit amet, consectetur."><img src="/assets/images/slider/slide-02.jpg" width="1140" height="420" alt=" " /></div>
                </div>
            </div>{# #slider #}
        </div> {# #home #}
        <section id="horaire" data-section>
            <div class="padding">
                <h1 class="h2">Horaire</h1>
                <ul id="schedule-nav">
                    {% for date, dateData in sessions %}
                        <li><a href="#/horaire/{{ date }}" data-ref="{{ date }}">{{ dateData.day | dateTime("%A %d %B") }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div id="schedule">
                <ul id="rooms-name">
                    {% for room in rooms %}
                        <li id="room{{ room.id }}">Salle {{ room.name }}</li>
                    {% endfor %}
                </ul>
                <span class="shadow-top"></span>
                <div class="wrapper">
                    <div id="schedule-wrap">
                        <div id="time-zone"></div>
                        <div class="slides-wrap">
                            {% for date, dateData in sessions %}
                                <div id="{{ date }}" class="slide">
                                    <span id="separators">{% for i in 0..rooms|length %}<span></span>{% endfor %}</span>
                                    <span class="lines">
                                        {% for line in lines[date] %}
                                            <span class="t{{ line }}"></span>
                                        {% endfor %}
                                    </span>

                                    {% for blockData in dateData.blocks %}
                                        {% if blockData.session is defined %}
                                            {% if blockData.session.break %}
                                                <div class="break t{{ blockData.session.line }} t{{ blockData.size }}m">
                                                    {{ blockData.session.description }}
                                                </div>
                                            {% else %}
                                                <div class="row t{{ blockData.session.line }} t{{ blockData.size }}m">
                                                    {{ blockData.session.description }}
                                                </div>
                                            {% endif %}
                                        {% else %}
                                            <div class="conferences t{{ blockData.line }} t{{ blockData.size }}m">
                                                {% for roomId, sessions in blockData.list %}
                                                    <div class="col">
                                                        {% for session in sessions %}
                                                            {% include 'include/conference-thumb.html.twig' with {
                                                                duration  : session.duration,
                                                                line  : session.line,
                                                                performer : speakers[session.speaker_id].name,
                                                                img       : "/assets/images/performers/" ~ speakers[session.speaker_id].image,
                                                                desc      : "Lorem ipsum dolor sit amet [...]",
                                                                room      : session.room_id
                                                            } %}
                                                        {% endfor %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div> {# #schedule-wrap #}
                </div> {# .wrapper #}
                <span class="shadow-bottom"></span>
                <span id="open-shedule"><a href="javascript://">Tout afficher</a></span>
            </div>
        </section>{# #horaire #}
        
        <section id="lieu-et-infos" data-section style="height: 2500px">
            <h1 class="h2">Lieu et infos</h1>
            <div id="gmap"></div>
        </section>
      </div>
    </div>

      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
      <script>window.jQuery || document.write('<script src="/assets/javascripts/libs/jquery.js"><\/script>')</script>
      {% block javascripts %}{% endblock %}
      <script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;language=en"></script>
      <script src="/assets/javascripts/libs/sammy.js"></script>
      <script src="/assets/javascripts/libs/libs.js"></script>
      <script src="/assets/javascripts/global.js"></script>
</body>
</html>
