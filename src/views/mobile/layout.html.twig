<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="fr"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="fr"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="fr"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="fr"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="description" content="{% block metadescription %}{% endblock %}" />

        <meta name="apple-mobile-web-app-capable" content="yes"/>
        <meta name="apple-mobile-web-app-status-bar-style" content="blackgit"/>
        <meta name="format-detection" content="telephone=no">

        <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="apple-touch-icon-72x72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="apple-touch-icon-114x114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="apple-touch-icon-144x144-precomposed.png">

        {% block og_meta %}{% endblock %}

        <title>{% block title %}{% endblock %}Web à Québec</title>

        <link rel="stylesheet" href="/assets/stylesheets/mobile.css">
        {% block stylesheets %}{% endblock %}
    </head>

    <body class="mobile layout {% block bodyClasses %}{% endblock %}" itemscope itemtype="http://schema.org/Event">
        <header id="header">
            <div id="logo">
                <a href="/">
                    <img src="/assets/images/mobile/logo-waq-mobile.png" alt="Logo - Web à Québec" width="115" height="41">
                </a>
            </div>

            <nav class="navigation">
                <ul>
                    <li><a href="/"{% if section is defined and section == "schedule" %} class="active"{% endif %}>Horaire</a></li>
                    <li><a href="/mobile/lieu-et-infos/"{% if section is defined and section == "location-and-infos" %} class="active"{% endif %}>Lieu et infos</a></li>
                    <li><a href="/mobile/nous-joindre/"{% if section is defined and section == "contact-us" %} class="active"{% endif %}>Nous joindre</a></li>
                </ul>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer id="footer">
            <nav class="navigation">
                <ul>
                    <li><a href="/"{% if section is defined and section == "schedule" %} class="active"{% endif %}>Horaire</a></li>
                    <li><a href="/mobile/lieu-et-infos/"{% if section is defined and section == "location-and-infos" %} class="active"{% endif %}>Lieu et infos</a></li>
                    <li><a href="/mobile/nous-joindre/"{% if section is defined and section == "contact-us" %} class="active"{% endif %}>Nous joindre</a></li>
                </ul>

                <ul>
                    <li><a href="/mobile/a-propos/"{% if section is defined and section == "about" %} class="active"{% endif %}>À propos</a></li>
                    <li><a href="/mobile/partenaires/"{% if section is defined and section == "partners" %} class="active"{% endif %}>Partenaires</a></li>
                </ul>
            </nav>
        </footer>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="/assets/javascripts/libs/jquery.js"><\/script>')</script>
        {% block javascripts %}{% endblock %}
    </body>
</html>