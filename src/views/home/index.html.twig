                        </div>
                        {% for date, dateData in sessions %}
                            {% if dateData.day | dateTime("%A") != "mercredi" %}
                                <div id="{{ dateData.day | dateTime("%A") }}" class="slide{% if today | dateTime("%A") == dateData.day | dateTime("%A") %} active{% endif %}">
                                    <span id="separators">{% for room in rooms if room.id != 6 %}<span></span>{% endfor %}</span>
                                    <span class="lines">
                                        {% for line in lines[date] %}
                                            <span class="t{{ line }}"></span>
                                        {% endfor %}
                                    </span>

                                    {% for blockData in dateData.blocks %}
                                        {% if blockData.session is defined %}
                                            {% if blockData.session.break %}
                                                <div class="break t{{ blockData.session.line }} t{{ blockData.size }}m">
                                                    <span class="type">{{ blockData.session.name }}</span>
                                                </div>
                                            {% else %}
                                                <div class="row t{{ blockData.session.line }} t{{ blockData.size }}m" itemprop="subEvent" itemscope itemtype="http://schema.org/Event">
                                                
                                                    {% include 'includes/conference-full.html.twig' with {
                                                        id          : blockData.session.id,
                                                        slug        : blockData.session.slug,
                                                        performer   : speakers[blockData.session.speaker_id].name,
                                                        img         : speakers[blockData.session.speaker_id].image,
                                                        name        : blockData.session.name,
                                                        room        : blockData.session.room_id,
                                                        start       : blockData.session.start,
                                                        end         : blockData.session.end,
                                                        sponsors    : sponsors,
                                                        sponsorId   : blockData.session.sponsor_id
                                                    } %}
                                                
                                                </div>
                                            {% endif %}
                                        {% else %}
                                            <div class="conferences t{{ blockData.line }} t{{ blockData.size }}m">
                                                {% for roomId, sessions in blockData.list %}
                                                    <div class="col">
                                                        {% for session in sessions %}
                                                          {% if session.empty %}
                                                            <span class="empty t{{ session.line }} t{{ session.duration }}m" ></span>
                                                          {% else %}
                                                            {% include 'includes/conference-thumb.html.twig' with {
                                                                id        : session.id,
                                                                slug      : session.slug,
                                                                duration  : session.duration,
                                                                line      : session.line,
                                                                performer : speakers[session.speaker_id].name,
                                                                img       : speakers[session.speaker_id].image,
                                                                name      : session.name,
                                                                room      : session.room_id,
                                                                start     : session.start
                                                            } %}
                                                          {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endfor %}
